<Window x:Name="MainWin" x:Class="WinBrake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:WinBrake"
        mc:Ignorable="d"
        Title="MOTOR" Height="592" Width="800" Icon="/imagebrake.ico" ShowInTaskbar="False">

    <Grid Height="574" VerticalAlignment="Top">


        <oxy:PlotView x:Name="plotview"  Model="{Binding MyModel}" Margin="0,132,0,10" ToolTip="Scale on axes with the mouse" Grid.Row="1"/>
        <Button x:Name="COM" Content="COM" HorizontalAlignment="Left" Margin="19,11,0,0" VerticalAlignment="Top" Width="75" Background="Red" Height="20" RenderTransformOrigin="0.511,-0.365" Grid.Row="1"/>
        <Button x:Name="SetPar" Content="Set Params" HorizontalAlignment="Left" Margin="664,32,0,0" VerticalAlignment="Top" Width="75" MouseDoubleClick="SetPar_MouseDoubleClick" ToolTip="Double-click the mouse to write values  to the drive. Double-click GetPar first!" UseLayoutRounding="True" Height="21" Grid.Row="1"/>
        <TextBox x:Name="Space"  HorizontalAlignment="Left" Height="23" Margin="573,53,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="64" BorderBrush="Red" Grid.Row="1"/>
        <Label x:Name="SpaceLabel" Content="SPACING[mm]:" HorizontalAlignment="Left" Margin="569,32,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.022,0.423" Height="26" Width="88" Foreground="Red" Grid.Row="1"/>
        <Button x:Name="GetPar" Content="Get Params" HorizontalAlignment="Left" Margin="121,35,0,0" VerticalAlignment="Top" Width="75" MouseDoubleClick="GetPar_MouseDoubleClick" ToolTip="Double-click the mouse to read values  from drive" Height="20" Cursor="Hand"/>
        <TextBox x:Name="ForceSt" HorizontalAlignment="Left" Height="23" Margin="463,13,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="72" BorderBrush="Red"/>
        <Label x:Name="ForceStLabel" Content="FORCE[kN]:" HorizontalAlignment="Left" Margin="434,-7,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.237,0.308" Height="26" Width="122" Foreground="Red"/>
        <CheckBox x:Name="Imotor" Content="Imotor[10A= 100%]" HorizontalAlignment="Left" Margin="93,114,0,0" VerticalAlignment="Top" IsChecked="True" Foreground="Red" BorderBrush="Red" Background="Red" Height="15" Width="124" RenderTransformOrigin="0.444,1.625" Grid.Row="1"/>
        <CheckBox x:Name="Distance" Content="Distance[10mm=100%]" HorizontalAlignment="Left" Margin="227,114,0,0" VerticalAlignment="Top" Width="148" IsChecked="True" BorderBrush="Lime" Foreground="#FF21B721" Background="#9900FF00" Height="15" Grid.Row="1"/>
        <CheckBox x:Name="Revolution" Content="Revolution[60rpm=100%]" HorizontalAlignment="Left" Margin="379,114,0,0" VerticalAlignment="Top" Width="168" Background="#990000FF" BorderBrush="Blue" Foreground="Blue" IsChecked="True" Height="15" Grid.Row="1"/>
        <CheckBox x:Name="Voltage" Content="Voltage[24V=100%]" HorizontalAlignment="Left" Margin="547,114,0,0" VerticalAlignment="Top" Width="127" Background="#99FF8000" BorderBrush="#FFFF8000" Foreground="#FFFF8000" IsChecked="True" Height="15"/>
        <TextBox x:Name="Forcetime" HorizontalAlignment="Left" Margin="463,55,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="63" Height="22"/>
        <Label x:Name="ForcetimeLabel" Content="FORCETIME[s]:" HorizontalAlignment="Left" Margin="452,36,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,-0.153" Height="26" Width="87"/>
        <Label x:Name="NoforceLabel" Content="NOFORCE[s]:" HorizontalAlignment="Left" Margin="345,35,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,-0.153" Height="26" Width="78"/>
        <TextBox x:Name="Noforce" HorizontalAlignment="Left" Margin="353,54,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="63" Height="21"/>
        <Label x:Name="ClosingLabel" Content="CLOSING[mm]:" HorizontalAlignment="Left" Margin="575,-9,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,-0.153" Height="26" Width="89"/>
        <TextBox x:Name="Closemm" HorizontalAlignment="Left" Margin="575,11,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="62" Height="21" Grid.Row="1"/>
        <TextBox x:Name="Curt" HorizontalAlignment="Left" Margin="353,13,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="63" Height="21" BorderBrush="Red"/>
        <Label x:Name="CurtLabel" Content="Isw[A]:-----" HorizontalAlignment="Left" Margin="353,-8,0,0" VerticalAlignment="Top" Height="26" Width="70" RenderTransformOrigin="0.185,0.63" Foreground="Red" Cursor="Hand"/>
        <CheckBox x:Name="GraphEn" Content="Graph&#xD;&#xA;Enable" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" IsChecked="True" Grid.Row="1"/>
        <Button x:Name="Save" Content="SAVE Graph" HorizontalAlignment="Left" Margin="19,55,0,0" VerticalAlignment="Top" Width="67" MouseDoubleClick="Save_MouseDoubleClick" Grid.Row="1"/>
        <TextBox x:Name="Cycles" HorizontalAlignment="Left" Margin="224,54,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="62" Height="20"/>
        <Label x:Name="CyclesLabel1" Content="CYCLES:" HorizontalAlignment="Left" Margin="224,34,0,0" VerticalAlignment="Top" Width="54"/>
        <CheckBox x:Name="Test" Content="Testbrake&#xD;&#xA;enable" HorizontalAlignment="Left" Margin="132,3,0,0" VerticalAlignment="Top"/>
        <Ellipse x:Name="Halls" HorizontalAlignment="Left" Height="12" Margin="101,76,0,0" Stroke="Lime" VerticalAlignment="Top" Width="12" StrokeThickness="12"/>
        <Label x:Name="HallsLabel" Content="HALL &#xD;&#xA;SENSORS" HorizontalAlignment="Left" Margin="93,81,0,0" VerticalAlignment="Top" FontSize="10"  MouseDown="HallsLabel_MouseDown"/>
        <Ellipse x:Name="Winding" HorizontalAlignment="Left" Height="12" Margin="161,76,0,0" Stroke="Lime" VerticalAlignment="Top" Width="12" StrokeThickness="12"/>
        <Label x:Name="WindingLabel" Content="MOTOR&#xD;&#xA;WINDING" HorizontalAlignment="Left" Margin="153,81,0,0" VerticalAlignment="Top" FontSize="10"  MouseDown="WindingLabel_MouseDown"/>
        <Ellipse x:Name="WatchDog" HorizontalAlignment="Left" Height="12" Margin="221,76,0,0" Stroke="Lime" VerticalAlignment="Top" Width="12" StrokeThickness="12"/>
        <Label x:Name="WDLabel" Content="WATCH&#xD;&#xA;DOG&#xD;&#xA;&#xD;&#xA;" HorizontalAlignment="Left" Margin="213,81,0,0" VerticalAlignment="Top" FontSize="10"  MouseDown="WDLabel_MouseDown"/>
        <Ellipse x:Name="SoftPower" HorizontalAlignment="Left" Height="12" Margin="281,76,0,0" Stroke="Lime" VerticalAlignment="Top" Width="12" StrokeThickness="12"/>
        <Label x:Name="PowerLabel" Content="SOFT&#xD;&#xA;POWER" HorizontalAlignment="Left" Margin="273,81,0,0" VerticalAlignment="Top" FontSize="10"  MouseDown="PowerLabel_MouseDown"/>
        <Ellipse x:Name="Pressure" HorizontalAlignment="Left" Height="12" Margin="341,76,0,0" Stroke="Lime" VerticalAlignment="Top" Width="12" StrokeThickness="12"/>
        <Label x:Name="PressureLabel" Content="PRESSURE" HorizontalAlignment="Left" Margin="333,81,0,0" VerticalAlignment="Top" FontSize="10"  MouseDown="PressureLabel_MouseDown"/>
        <Ellipse x:Name="State" HorizontalAlignment="Left" Height="12" Margin="401,76,0,0" Stroke="Lime" VerticalAlignment="Top" Width="12" StrokeThickness="12"/>
        <Label x:Name="StateLabel" Content="STATE" HorizontalAlignment="Left" Margin="393,81,0,0" VerticalAlignment="Top" FontSize="10"  MouseDown="PowerLabel_MouseDown"/>
        <CheckBox x:Name="InvertHall" Content="InvertHall&#xD;&#xA;" HorizontalAlignment="Left" Margin="675,10,0,0" VerticalAlignment="Top" Height="16"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="223,16,0,0" VerticalAlignment="Top" Width="81" SmallChange="1" TickPlacement="TopLeft" Cursor="Hand" MouseLeave="slider_MouseLeave" IsDirectionReversed="True" LargeChange="2" AutoToolTipPlacement="TopLeft" Maximum="8" Height="22"/>
        <Label x:Name="weakening" Content="Weakening" HorizontalAlignment="Left" Margin="227,-6,0,0" VerticalAlignment="Top" Width="78" Height="28"/>
        <CheckBox x:Name="LeftDir" Content="Left&#xD;&#xA;Direct   " HorizontalAlignment="Left" Margin="674,60,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="bootbox" HorizontalAlignment="Left" Margin="740,60,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="36" Height="17"/>

    </Grid>
</Window>
